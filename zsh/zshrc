alias tfmt='find . -type f -name "*.tf" -exec terraform fmt {} \;'

function tffmt() {
    local depth="$1"
    if [[ -z "$depth" ]]; then
        depth=1
    fi
    if [[ "$depth" == "-r" ]]; then
        find . -type f -name "*.tf" -exec terraform fmt {} \;
    else
        find . -maxdepth "$depth" -type f -name "*.tf" -exec terraform fmt {} \;
    fi
}

