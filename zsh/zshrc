# Basic cordon and drain
alias kcordon='kubectl cordon'
alias kdrain='kubectl drain'
alias kuncordon='kubectl uncordon'

# Drain with common options
alias kdrain-safe='kubectl drain --ignore-daemonsets --delete-emptydir-data --force'
alias kdrain-grace='kubectl drain --ignore-daemonsets --delete-emptydir-data --grace-period=300'

kcd() {
    if [ -z "$1" ]; then
        echo "Usage: kcd <node-name>"
        return 1
    fi
    echo "Cordoning node $1..."
    kubectl cordon "$1" && \
    echo "Draining node $1..." && \
    kubectl drain "$1" --ignore-daemonsets --delete-emptydir-data --force
}

# Drain with custom grace period
kcd-grace() {
    if [ -z "$1" ]; then
        echo "Usage: kcd-grace <node-name> [grace-period-seconds]"
        return 1
    fi
    local grace_period=${2:-300}
    echo "Cordoning node $1..."
    kubectl cordon "$1" && \
    echo "Draining node $1 with ${grace_period}s grace period..." && \
    kubectl drain "$1" --ignore-daemonsets --delete-emptydir-data --grace-period="$grace_period"
}

# Safe drain (asks for confirmation)
kcd-confirm() {
    if [ -z "$1" ]; then
        echo "Usage: kcd-confirm <node-name>"
        return 1
    fi
    echo "About to cordon and drain node: $1"
    read "response?Are you sure? (y/N): "
    if [[ "$response" =~ ^[Yy]$ ]]; then
        kubectl cordon "$1" && \
        kubectl drain "$1" --ignore-daemonsets --delete-emptydir-data --force
    else
        echo "Operation cancelled."
    fi
}

#  usage
# kcordon ip-10-30-125-213.ec2.internal
# kdrain-safe ip-10-30-125-213.ec2.internal
# kcd ip-10-30-125-213.ec2.internal
# kcd-grace ip-10-30-125-213.ec2.internal 600
# kcd-confirm ip-10-30-125-213.ec2.internal
# kuncordon ip-10-30-125-213.ec2.internal


